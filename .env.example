# 量化交易系统环境配置模板
# 复制此文件为 .env 并根据需要修改配置

# =============================================================================
# Binance API 配置
# =============================================================================
# 从 https://www.binance.com/cn/my/settings/api-management 获取
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
# 是否使用测试网 (建议初学者设为 true)
BINANCE_TESTNET=true

# =============================================================================
# 交易配置
# =============================================================================
# 交易模式: paper(模拟), backtest(回测), live(实盘)
TRADING_MODE=paper

# 默认杠杆倍数 (1-125)
DEFAULT_LEVERAGE=1

# 最大仓位大小 (USDT)
MAX_POSITION_SIZE=1000.0

# 风险管理
MAX_DAILY_LOSS_PERCENT=5.0  # 最大日亏损百分比
MAX_POSITION_PERCENT=10.0   # 单个仓位最大占比
STOP_LOSS_PERCENT=2.0       # 止损百分比

# =============================================================================
# 系统配置
# =============================================================================
# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 数据目录
DATA_DIR=./data
LOG_DIR=./logs

# 数据库配置
DATABASE_URL=sqlite:///./data/trading.db
DUCKDB_PATH=./data/market_data.duckdb

# =============================================================================
# ZeroMQ 消息队列配置
# =============================================================================
ZMQ_PUB_PORT=5555
ZMQ_SUB_PORT=5556

# =============================================================================
# Web 界面配置
# =============================================================================
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_RELOAD=true

# =============================================================================
# LLM 配置 (可选)
# =============================================================================
# OpenAI API Key (用于智能分析)
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-3.5-turbo

# 本地LLM配置
LOCAL_LLM_ENABLED=false
LOCAL_LLM_URL=http://localhost:11434

# =============================================================================
# 监控配置
# =============================================================================
# 是否启用指标收集
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# 环境设置
# =============================================================================
# 运行环境: development, testing, production
ENVIRONMENT=development